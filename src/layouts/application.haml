	%body
		.container_16
			.grid_1.alpha
				&nbsp;
			.grid_14
				#header
					.grid_7.alpha
						
					.grid_7.omega
						
				.clear
				#content
					.header_logo
						=link img("logo.png"), "/"
						.contact{:style=>"float:right; margin-top:65px; margin-right:10px"}
							/%h6 512.563.6611
							=link img("facebook.png", :height=>"40px"), "http://www.facebook.com/pages/Green-Light-Electrical-Services/136121719769759"
						.clear
					#navbar
						%ul#menu
							%li
								%a{:href=>"/", :class=>current_page == "/index.html" ? 'current' : ''}Home
							%li
								%a{:href=>"commercial.html", :class=>current_page == "/commercial.html" ? 'current' : ''}Commercial
							%li
								%a{:href=>"residential.html", :class=>current_page == "/residential.html" ? 'current' : ''}Residential
							%li
								%a{:href=>"testimonials.html", :class=>current_page == "/testimonials.html" ? 'current' : ''}Testimonials
							%li
								%a{:href=>"contact.html", :class=>current_page == "/contact.html" ? 'current' : ''}Contact
							%li.right.text
								512.563.6611 - TECL # 27607
					#main
						=yield
					.clear
					.center.contact_information
						512.563.6611 or
						=link "Contact"
						%br
						&copy; 2010-2011 Green Light Electrical Services, LLC. | TECL# 27607
				
			.grid_2.omega
