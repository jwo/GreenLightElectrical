%html{:xmlns => "http://www.w3.org/1999/xhtml"}
	%head
		%meta{:content => "text/html; charset=utf-8", "http-equiv" => "content-type"}/
		%title=page_title(current_page)
		%link{:href=>"http://flowplayer.org/tools/css/scrollable-buttons.css", :media=>:screen, :rel=>:stylesheet, :type=>"text/css"}
		%link{:href=>"http://fonts.googleapis.com/css?family=Yanone+Kaffeesatz:light&subset=latin", :media=>:screen, :rel=>:stylesheet, :type=>"text/css"}
		= stylesheets :reset, :text, :grid, :default, :application, :buttons,:scrollable, :prettyPhoto, :media => :screen
		= javascripts "http://cdn.jquerytools.org/1.2.5/full/jquery.tools.min.js"
